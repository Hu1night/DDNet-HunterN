# gdm 榴弹瞬杀死斗 房间配置

# 调用dm房间配置
exec "room_config/modes/dm.rcfg"

# instagib settings
add_vote "设置: 打开榴弹跳返回弹药" "ammo_regen_boost 1"
add_vote "设置: 关闭榴弹跳返回弹药" "ammo_regen_boost 0"

# 使用瞬杀榴弹
weapon 3
# 最大弹药数
max_ammo 6
# 弹药重生时间
ammo_regen_time 125
# 空弹重装延迟
empty_penalty 750
# 榴弹跳返回弹药
ammo_regen_boost 1
# 弹药重生延迟
ammo_regen_delay 250